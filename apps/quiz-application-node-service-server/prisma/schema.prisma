datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Question {
  correctAnswer Json?
  createdAt     DateTime               @default(now())
  id            String                 @id @default(cuid())
  options       Json?
  questionText  String?
  typeField     EnumQuestionTypeField?
  updatedAt     DateTime               @updatedAt
}

model Quiz {
  createdAt DateTime        @default(now())
  endTime   DateTime?
  id        String          @id @default(cuid())
  name      String?
  results   Result[]
  startTime DateTime?
  status    EnumQuizStatus?
  updatedAt DateTime        @updatedAt
}

model Result {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  pass      Boolean?
  quiz      Quiz?    @relation(fields: [quizId], references: [id])
  quizId    String?
  score     Float?
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  results   Result[]
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}

enum EnumQuestionTypeField {
  Option1
}

enum EnumQuizStatus {
  Option1
}
